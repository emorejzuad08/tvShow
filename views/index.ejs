<%- include('partials/header.ejs') %> <%- include('partials/nav.ejs') %>
<br />

<main>
  <div class="box" id="heading">
    <h1></h1>
  </div>

  <div class="box">
    <form action="/submit" method="post">
      <input
        type="text"
        name="searchQuery"
        placeholder="Search TV Show"
        autocomplete="off"
        autofocus
      />
      <button type="submit" name="list">
        <svg
          focusable="false"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <path
            d="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
          ></path>
        </svg>
      </button>
    </form>
  </div>

  <% if(locals.data){%>
  <div class="box">
    <% for(let result of data) { %> <% if(result.show.image !== null){%>
    <img src="<%= result.show.image.medium %>" alt="" />
    <% } else{%>
    <img
      src="https://t3.ftcdn.net/jpg/04/62/93/66/360_F_462936689_BpEEcxfgMuYPfTaIAOC1tCDurmsno7Sp.jpg"
      alt=""
    />
    <% } %>
    <br />
    <span><b>Title:</b> <%= result.show.name %></span>
    <br />
    <span><b>Type:</b> <%= result.show.type %></span>
    <br />
    <% if(result.show.network !== null){%>
    <span><b>Country:</b> <%= result.show.network.country.name %></span>
    <br />
    <% }%>
    <span><b>Premiered:</b> <%= result.show.premiered %></span>
    <br />
    <span><b>Ended:</b> <%= result.show.ended %></span>
    <br />

    <br />
    <% } %>
  </div>
  <% } %>
</main>
<%- include("partials/footer.ejs") %>
